{
  "name": "okiro-eleventy",
  "version": "1.0.0",
  "description": "Okiro theme converted from Ghost to Eleventy",
  "main": ".eleventy.js",
  "scripts": {
    "build": "run-p build:*",
    "build:eleventy": "eleventy",
    "build:css": "postcss src/assets/css/screen.css -o _site/assets/css/screen.css",
    "dev": "run-p dev:*",
    "dev:eleventy": "eleventy --serve --quiet",
    "dev:css": "postcss src/assets/css/screen.css -o _site/assets/css/screen.css --watch",
    "clean": "rm -rf _site",
    "debug": "DEBUG=Eleventy* eleventy"
  },
  "keywords": [
    "eleventy",
    "blog",
    "theme",
    "static-site-generator"
  ],
  "author": "Converted from fueko's Okiro Ghost theme",
  "license": "MIT",
  "dependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-img": "^3.1.8",
    "luxon": "^3.4.4",
    "markdown-it": "^14.0.0",
    "markdown-it-footnote": "^4.0.0",
    "sanitize-html": "^2.17.0"
  },
  "devDependencies": {
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
    "autoprefixer": "^10.4.16",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0"
  }
}
