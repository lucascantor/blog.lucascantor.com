<header class="header-section">
	<div class="header-wrap">
		<div class="header-logo{% if site.logo or settings.logo_for_dark_color_scheme %} is-image{% endif %}">
			{% include "partials/logo.njk" %}
		</div>
		<div class="header-nav">
			<input id="toggle" class="header-checkbox" type="checkbox">
			<label class="header-toggle" for="toggle">
				<span>
					<span class="bar"></span>
					<span class="bar"></span>
					<span class="bar"></span>
				</span>
			</label>
			<nav class="is-search">
				<ul>
					{% for item in site.navigation %}
					{% if item.label == "Home" %}
					<li><a href="{{ site.author.url }}"{% if (site.url + page.url).startsWith(site.author.url) %} class="is-active"{% endif %}>{{ item.label }}</a></li>
					{% elif item.label == "Blog" %}
					<li><a href="{{ item.url | url }}"{% if (site.url + page.url).startsWith(site.url) %} class="is-active"{% endif %}>{{ item.label }}</a></li>
					{% else %}
					<li><a href="{{ item.url | url }}"{% if item.url == (site.url + page.url) %} class="is-active"{% endif %}>{{ item.label }}</a></li>
					{% endif %}
					{% endfor %}
				</ul>
				<ul>
				</ul>
			</nav>
		</div>
	</div>
</header>